# VisualAI MCP Server Configuration

# Python Configuration
PYTHON_PATH=python3
PYTHON_MIN_VERSION=3.9

# MLX Model Configuration
MODEL_NAME=stabilityai/stable-diffusion-2-1
MODEL_CACHE_DIR=~/.cache/huggingface/hub
MODEL_QUANTIZATION=4bit

# Image Generation Defaults
DEFAULT_IMAGE_WIDTH=512
DEFAULT_IMAGE_HEIGHT=512
DEFAULT_INFERENCE_STEPS=20
DEFAULT_GUIDANCE_SCALE=7.5

# Session Storage
SESSION_STORAGE_DIR=~/.visualai/sessions

# Preview Server
PREVIEW_SERVER_PORT=3737
PREVIEW_SERVER_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE=~/.visualai/logs/mcp-server.log

# Performance
MAX_CONCURRENT_GENERATIONS=1
SUBPROCESS_TIMEOUT_MS=120000
